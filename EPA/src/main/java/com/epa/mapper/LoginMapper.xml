<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.epa.mapper.MemberMapper">

<update id="attend" parameterType="String">
    <![CDATA[
    UPDATE LOGIN_TB
    SET ATTEND_COUNT = ATTEND_COUNT + 1
    WHERE MEM_ID = #{memId}
    AND LAST_ATTEND_DATE < CURRENT_DATE
    ]]>
</update>

</mapper>