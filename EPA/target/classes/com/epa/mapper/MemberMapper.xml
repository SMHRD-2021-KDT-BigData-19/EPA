<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.epa.mapper.MemberMapper">
     
     <insert id="joinInsert" parameterType="com.epa.entity.Member">
        insert into MEM_TB (MEM_ID,MEM_PW,MEM_NM,MEM_AGE,MEM_H,MEM_W,MEM_G,MEM_EMAIL)
        values (#{MEM_ID},#{MEM_PW},#{MEM_NM},#{MEM_AGE},#{MEM_H},#{MEM_W},#{MEM_G},#{MEM_EMAIL})
    </insert>
    
       <select id="loginMember" parameterType="com.epa.entity.Member"
        resultType="com.epa.entity.Member">
        select * from MEM_TB where MEM_ID=#{MEM_ID} and MEM_PW=#{MEM_PW}
    </select> 
    
	<insert id="insertMember">
		insert into MEM_TB(MEM_ID,MEM_PW,MEM_NM,MEM_EMAIL) 
      values (#{MEM_ID},#{MEM_PW},#{MEM_NM},#{MEM_EMAIL})
	</insert>

	<select id="readMember" resultType="com.epa.entity.Member">
		select *
		from MEM_TB
		where MEM_ID=#{MEM_ID}
	</select>

	<select id="readMemberWithIDPW" resultType="com.epa.entity.Member">
		select *
		from MEM_TB
		where MEM_ID=#{MEM_ID} and MEM_PW=#{MEM_PW}
	</select>	
</mapper>